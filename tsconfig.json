{
  "compilerOptions": {
    "typeRoots": [
      "@types",
      "node_modules/@types",
      "src/types" // this directory must contain the file express.d.ts
    ],
    "target": "ESNext", // define the target version of JavaScript
    "module": "CommonJS", // assure compatibility with Node.js
    "moduleResolution": "node", // how node modules are resolved
    "esModuleInterop": true, // Habilita importações de módulos no estilo ES
    "skipLibCheck": true, // Ignora a verificação de tipos nas bibliotecas
    "forceConsistentCasingInFileNames": true, // Garante que os nomes dos arquivos sejam consistentes
    "strict": true, // Habilita todas as verificações de tipo
    "outDir": "./dist", // Onde os arquivos compilados serão gerados
    "allowJs": true, // Permite arquivos JS ao lado de TS
    "resolveJsonModule": true // Permite importar arquivos JSON
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}